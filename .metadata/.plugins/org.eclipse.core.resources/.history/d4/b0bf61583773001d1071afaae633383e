package prodcons;

public class Message {
	private String content;
	private int contentLen;
	private int id;

	public Message() {
		content = "";
		contentLen = 0;
		id = 0;
	}
	
	public Message(String text, int i) {
		content = text;
		contentLen = content.length();
		id = i;
	}

	public String getContent() {
		return content;
	}

	public int getContentLen() {
		return contentLen;
	}
}
